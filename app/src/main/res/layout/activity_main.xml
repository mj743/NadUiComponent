<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="@dimen/size_30"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/size_40">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_24"
            android:layout_marginTop="@dimen/size_20"
            android:layout_marginEnd="@dimen/size_24"
            android:orientation="vertical">

            <com.nad.ui.component.layout.NadGradientConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_140"
                android:background="#2C6090"
                app:nadCornerRadius="@dimen/size_20"
                app:nadStrokeColor="@android:color/white"
                app:nadStrokeWidth="@dimen/size_2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/size_16"
                    android:text="ConstraintLayout Gradient Stroke"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_16"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </com.nad.ui.component.layout.NadGradientConstraintLayout>

            <com.nad.ui.component.layout.NadGlowConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_140"
                android:layout_marginTop="@dimen/size_10"
                android:background="#2C6090"
                app:nadStrokeColor="@android:color/white"
                app:nadCornerRadius="@dimen/size_20"
                app:nadStrokeWidth="@dimen/size_2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/size_16"
                    android:text="ConstraintLayout GlowStroke"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_16"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </com.nad.ui.component.layout.NadGlowConstraintLayout>
            <com.nad.ui.component.layout.NadGradientFrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_140"
                android:layout_marginTop="@dimen/size_10"
                android:background="#2C6090"
                app:nadStrokeColor="@android:color/white"
                app:nadCornerRadius="@dimen/size_20"
                app:nadStrokeWidth="@dimen/size_2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/size_16"
                    android:text="FrameLayout Gradient Stroke"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_16"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </com.nad.ui.component.layout.NadGradientFrameLayout>
            <com.nad.ui.component.layout.NadGlowFrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_140"
                android:layout_marginTop="@dimen/size_10"
                android:background="#2C6090"
                app:nadStrokeColor="@android:color/white"
                app:nadCornerRadius="@dimen/size_20"
                app:nadStrokeWidth="@dimen/size_2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/size_16"
                    android:text="FrameLayout GlowStroke"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_16"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </com.nad.ui.component.layout.NadGlowFrameLayout>
            <com.nad.ui.component.layout.NadGradientView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_140"
                android:layout_marginTop="@dimen/size_10"
                android:background="#2C6090"
                app:nadStrokeColor="@android:color/white"
                app:nadCornerRadius="@dimen/size_20"
                app:nadStrokeWidth="@dimen/size_2"/>
            <com.nad.ui.component.layout.NadGlowView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_140"
                android:layout_marginTop="@dimen/size_10"
                android:background="#2C6090"
                app:nadStrokeColor="@android:color/white"
                app:nadCornerRadius="@dimen/size_20"
                app:nadStrokeWidth="@dimen/size_2"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>